<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:color="#b6b7b5" android:state_enabled="false" />

    <!--When Button is in pressed state -->
    <item android:color="#C2FF8F6B" android:state_pressed="true" />

    <!-- &lt;!&ndash;When Button is in selected state &ndash;&gt;
     <item android:state_selected="true" android:color="#fabcff" />-->

    <!--Default Background Color -->
    <item android:color="@android:color/transparent" />

</selector>
