<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyProject22" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="tab_text2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18dp</item>
        <item name="textAllCaps">false</item>

        <!--        font -->
        <item name="colorPrimary">@color/nearlyRed</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/athiti_light</item>
    </style>

    <style name="EditTextTheme"  parent="Theme.MaterialComponents">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/purple_500</item>
    </style>

    <style name="EditTextTheme2"  parent="Theme.MaterialComponents">

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/purple_500</item>
    </style>



    <style name="MySeekBar2" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:thumbTint">#c51162</item>
    </style>



    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#88827F</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:thumbTint">#FFFFFF</item>
    </style>

</resources>