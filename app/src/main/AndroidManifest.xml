<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myproject22">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/diamond"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyProject22">
        <activity android:name=".View.ImageListActivity"></activity>
        <activity android:name=".View.CategoryParentActivity" />
        <activity android:name=".View.AddingTypeCategoryActivity" />
        <activity android:name=".View.CategoryActivity" />
        <activity android:name=".View.AddingActivity" />
        <activity android:name=".View.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.GoalActivity" />
        <activity android:name=".View.SavingActivity" />
    </application>

</manifest>