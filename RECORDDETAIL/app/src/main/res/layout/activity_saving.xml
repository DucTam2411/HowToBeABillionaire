<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activity.SavingActivity">


    <ImageView
        android:id="@+id/ivGoalImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundhome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rprogress">

        <TextView
            android:id="@+id/tvGoalName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/backgroundTransForText"
            android:fontFamily="@font/athiti"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:text="Mua cổ phần tiệm tạp hóa gần nhà"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvGoalDateStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/backgroundTransForText"
        android:drawableStart="@drawable/icon_audio"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_mono"
        android:padding="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="18.00 PM ngày 2.2.2020"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


    <TextView
        android:id="@+id/tvGoalDayCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_mono"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:text="22 ngày"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rprogress"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/rprogress" />

    <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
        android:id="@+id/rprogress"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        app:barrierDirection="end"
        app:layout_constraintStart_toEndOf="@+id/tvGoalDayCount"
        app:layout_constraintTop_toTopOf="parent"
        app:rcBackgroundColor="#1C000000"
        app:rcBackgroundPadding="4dp"
        app:rcMax="100"
        app:rcProgress="40"
        app:rcProgressColor="#59000000"
        app:rcRadius="5dp"
        app:rcTextInsideGravity="end"
        app:rcTextOutsideGravity="end"
        app:rcTextPositionPriority="outside"
        app:rcTextProgress="40%"
        app:rcTextProgressColor="@color/white"
        app:rcTextProgressSize="14sp" />

    <ImageButton
        android:id="@+id/btnNewGoal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:onClick="NewGoalClicked"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_edit_spe"
        android:tint="@color/image_button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/btnDescription"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:onClick="ShowDescriptionClicked"
        android:src="@drawable/icon_information_white"
        android:tint="@color/image_button_selector"
        app:layout_constraintBottom_toBottomOf="@+id/btnNewGoal"
        app:layout_constraintStart_toEndOf="@+id/btnNewGoal"
        app:layout_constraintTop_toTopOf="@+id/btnNewGoal" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNewGoal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnNewGoal"
        app:strokeColor="@color/white"
        app:strokeWidth="1.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#50000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMoneySaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto_mono"
                android:paddingStart="10dp"
                android:text="1032322333"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto_mono"
                android:text="/"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvMoneyGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto_mono"
                android:paddingEnd="10dp"
                android:text="103232333 VND"
                android:textColor="@color/white" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvGoalDescription"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/backgroundTransForText"
        android:ellipsize="end"
        android:fontFamily="@font/athiti"
        android:maxLines="15"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:text="Mua cổ phần tiệm tạp hóa gần nhà  dlkskj ksdjjk dksj ksdjskj skdjskj skdjsk  djskj skdj skdj  skdjs "
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvGoalDateStart"
        app:layout_constraintTop_toBottomOf="@+id/tvGoalDateStart" />


</androidx.constraintlayout.widget.ConstraintLayout>